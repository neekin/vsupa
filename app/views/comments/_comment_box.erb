<%= form_for(Comment.new(:issue_id=>issue.id,:user_id=> current_user.id ),remote:true) do |f| %>
   <div class="row">
     <%=f.hidden_field :issue_id%>
     <%=f.hidden_field :user_id%>
    <%= f.text_area :comment ,:class => "col-sm-10" ,:style=>"height:80px;width:100%"%>
   </div>
    <div class="row">
    <%= f.submit '提交评论', class: 'btn btn-primary btn-submit col-xs-12' %>
    </div>
<% end %>