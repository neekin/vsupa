<div class="row comment issue<%=comment.issue_id%>">
      <div class="col-sm-1"></div>
      <div class="col-sm-1 headimg">
        <%= image_tag comment.user.avatar_url(:small) || image_url("head.png") if comment.user.avatar%>
      </div>
      <div class="col-sm-10">
        <h5><%= comment.user.username%>:</h5>
        <div class="well well-sm"><%= comment.comment %></div>
      </div>
    </div>
